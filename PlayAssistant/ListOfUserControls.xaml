<UserControl x:Class="PlayAssistant.ListOfUserControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayAssistant"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="342">
    <Grid Background="#2D283E">
        <Grid.RowDefinitions>
            <RowDefinition Height="383*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <ListBox Foreground="White" x:Name="MainList" Margin="30,49,30,2" MouseDoubleClick="MainList_MouseDoubleClick"/>
        <Button Content="Conf" HorizontalAlignment="Center" Margin="0,3,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.31,0.39" Width="174" Height="54" Click="Button_Click" Grid.Row="1"/>
        <TextBox Foreground="White" x:Name ="ElementTitle"  Text="Title" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="174" Height="34"/>
    </Grid>
</UserControl>
